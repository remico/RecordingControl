{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "garmin tasks",
            "type": "shell",
            "command": "docker run ${config:DCKR.dvlp} --rm -it watchremote2:latest ${input:GarminTask}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "PickContainer",
            "type": "command",
            "command": "vscode-docker.containers.select"
        },
        {
            "id": "GarminTask",
            "type": "pickString",
            "description": "Garmin task to do",
            "options": [
                "${workspaceFolder}/scripts/build.sh",
                "${workspaceFolder}/scripts/simulate.sh"
            ]
        }
    ]
}
