<layout id="LayoutPageRecording">
    <button x="40" y="center" width="64" height="64" background="Graphics.COLOR_BLACK" behavior="onStopRecording">
        <state id="stateDefault" bitmap="@Drawables.RecStopButtonDefault" />
        <state id="stateHighlighted" bitmap="@Drawables.RecStopButtonPressed" />
        <state id="stateSelected" bitmap="@Drawables.RecStopButtonPressed" />
        <state id="stateDisabled" color="Graphics.COLOR_BLACK" />
    </button>
    <button x="136" y="center" width="64" height="64" background="Graphics.COLOR_BLACK" behavior="onRestartRecording">
        <state id="stateDefault" bitmap="@Drawables.RecRestartButtonDefault" />
        <state id="stateHighlighted" bitmap="@Drawables.RecRestartButtonPressed" />
        <state id="stateSelected" bitmap="@Drawables.RecRestartButtonPressed" />
        <state id="stateDisabled" color="Graphics.COLOR_BLACK" />
    </button>
</layout>
